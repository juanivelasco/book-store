<!DOCTYPE html>
<html lang="en">
<% include ./partials/header %>

    <body>
        <nav class="nav">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                <a class="nav-link " href="/">Home</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="/add">Add Book</a>
                </li>
                <li class="nav-item">
                        <a class="nav-link" href="/shop">Store</a>
                    </li>
                </li>
            </ul>
        </nav>

        <div class="container">
        <div class="jumbotron">
            <div class="container">
                <h2 class="display-5">Books</h2>

                <table class="table table-hover table-dark">
                    <thead>
                        <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Author</th>
                        <th scope="col">Price</th>
                        <th scope="col">Image</th>
                        <th scope="col">Update</th>
                        <th scope="col">Remove</th>
                        </tr>
                    </thead>
                    <tbody>
                    <% for (const book of results) { %>
                        <tr>
                            <td><%= book.title %></td>
                            <td><%= book.author %></td>
                            <td>$<%= book.price %></td>
                            <td><img src="<%= book.cover %>" width=150 height=150></td>
                            <td>
                                <form action="/update" method="get">
                                    <input type="hidden" name="bookID" value="<%= book._id %>">
                                    
                                    <button type="submit" class="btn btn-primary">Update</button>
                                </form>
                            </td>
                            <td>
                                <form action="/remove" method="get">
                                    <input type="hidden" name="filename" value="<%= book.cover %>">
                                    <input type="hidden" name="_id" value="<%= book._id %>">
                                    <button type="submit" class="btn btn-danger">Remove</button>
                                </form>
                            </td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        </div>


    <% include ./partials/scripts %>
    </body>

</html> 